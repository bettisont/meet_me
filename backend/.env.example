# Backend Environment Variables Example
# Copy this to .env and .env.production with your actual values

# Server Configuration
PORT=5001
NODE_ENV=development

# Database
# Development (SQLite)
DATABASE_URL="file:./dev.db"

# Production (PostgreSQL) - uncomment for production
# DATABASE_URL="postgresql://user:password@host:5432/meetme_prod?schema=public"

# Security
JWT_SECRET=your-jwt-secret-here-change-in-production
BCRYPT_ROUNDS=10

# CORS (comma-separated origins)
CORS_ORIGIN=http://localhost:5173

# Session
SESSION_SECRET=your-session-secret-here-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Keys (if needed for external services)
# GOOGLE_MAPS_API_KEY=
# POSTCODE_API_KEY=

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Email (for future features)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=
# EMAIL_FROM=